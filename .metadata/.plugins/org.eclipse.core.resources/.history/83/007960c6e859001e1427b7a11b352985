package hell;

class starTriangle {
	
	public String star="[*]";
	public int width=0;
	public String gather="";
	
	public starTriangle(int width){
		
		this.width=width;
	}
	public String toString() {
		for(int i=0;i<=this.width;i++) {
			for(int j=0;j<i;j++) {
				this.gather+=this.star;
			}
			this.gather+='\n';
		}
		return this.gather;
	}
}
